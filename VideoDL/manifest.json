{
    "manifest_version": 2,
    "name": "VideoDL",
    "version": "1.0.0",

    "background":{
            "scripts":["background.js"]
        }
    ,

    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "48": "/icons/icon.png"
        },
        "default_title": "VideoDL",
        "default_popup": "/view.html"
    },

    "permissions": [
        "tabs"
    ]

}